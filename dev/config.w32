ARG_ENABLE("phalcon", "enable phalcon framework", "no", "-Iext/phalcon");

if (PHP_PHALCON != "no") {
  EXTENSION("phalcon", "phalcon.c");
  ADD_SOURCES("ext/phalcon/kernel", "main.c fcall.c require.c debug.c assert.c object.c array.c", "phalcon")
  ADD_SOURCES("ext/phalcon/.", "dispatcher.c response.c request.c view.c test.c utils.c db.c flash.c logger.c config.c filter.c exception.c transaction.c controller.c tag.c", "phalcon")
  ADD_SOURCES("ext/phalcon/controller", "front.c", "phalcon")
  ADD_SOURCES("ext/phalcon/internal", "test.c testtemp.c testparent.c", "phalcon")
  ADD_SOURCES("ext/phalcon/tag", "exception.c", "phalcon")
  ADD_SOURCES("ext/phalcon/router", "rewrite.c", "phalcon")
  ADD_SOURCES("ext/phalcon/db", "exception.c mysql.c pool.c rawvalue.c", "phalcon")
  ADD_SOURCES("ext/phalcon/db/dialect", "mysql.c", "phalcon")
  ADD_SOURCES("ext/phalcon/transaction", "failed.c manager.c", "phalcon")
  ADD_SOURCES("ext/phalcon/config/adapter", "ini.c", "phalcon")
  ADD_SOURCES("ext/phalcon/config", "exception.c", "phalcon")
  ADD_SOURCES("ext/phalcon/model", "message.c manager.c metadata.c row.c base.c resultset.c exception.c", "phalcon")
  ADD_SOURCES("ext/phalcon/model/metadata", "memory.c", "phalcon")
  ADD_SOURCES("ext/phalcon/view", "exception.c", "phalcon")
}
